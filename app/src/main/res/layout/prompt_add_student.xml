<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:id="@+id/layout_root"
    android:layout_height="fill_parent"
    android:padding="10dp" >

    <TextView
        android:id="@+id/newStudentPromptTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student First Name : "
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <EditText
        android:id="@+id/newStudentPromptEditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/newStudentPromptTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Last Name : "
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <EditText
        android:id="@+id/newStudentPromptEditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </EditText>

</LinearLayout>