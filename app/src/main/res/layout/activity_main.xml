<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.plummer.deric.rubricapp.MainActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="135dp"
        android:layout_height="54dp"
        android:layout_marginTop="591dp"
        android:onClick="addAssignment"
        android:text="Add Assignment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Add Assignment"
        app:layout_constraintRight_toLeftOf="@+id/createRubricButton" />

    <Button
        android:id="@+id/createRubricButton"
        android:layout_width="135dp"
        android:layout_height="54dp"
        android:layout_marginTop="591dp"
        android:onClick="createRubric"
        android:text="Create Rubric"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:text="Create Rubric"
        app:layout_constraintLeft_toRightOf="@+id/button2" />

    <ListView
        android:id="@+id/AssignmentList"
        android:layout_width="248dp"
        android:layout_height="390dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:typeface="monospace"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.057"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

</android.support.constraint.ConstraintLayout>
