<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.plummer.deric.rubricapp.MakeRubricActivity">
    <ListView
        android:id="@+id/CriteriaList"
        android:layout_width="234dp"
        android:layout_height="288dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        tools:layout_editor_absoluteY="194dp"
        tools:layout_editor_absoluteX="75dp" />

    <Button
        android:id="@+id/criteriaButton"
        android:layout_width="117dp"
        android:layout_height="49dp"
        android:layout_marginRight="192dp"
        android:layout_marginTop="8dp"
        android:onClick="addCriteria"
        android:text="Add Criteria"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AssignmentName"
        android:layout_width="208dp"
        android:layout_height="45dp"
        android:text="TextView"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.396"
        app:layout_constraintTop_toBottomOf="@+id/criteriaButton" />

</android.support.constraint.ConstraintLayout>
